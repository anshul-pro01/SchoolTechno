<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:orientation="vertical"
    tools:context=".homework_image"
    android:background="@drawable/back_circ_desc"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/imagetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="imagetitle"
            android:textAlignment="center"
            android:textColor="#f0e68c"
            android:textSize="23dp"
            android:textStyle="bold"
            app:fontFamily="@font/prompt" />


        <TextView
            android:id="@+id/staff_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagetitle"
            android:layout_marginTop="20dp"
            android:text="Teacher name"
            android:textAlignment="center"
            android:textColor="#00FF7F"
            android:textSize="18dp"
            android:textStyle="bold"

            app:fontFamily="@font/lato" />

        <TextView
            android:id="@+id/teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/staff_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/staff_name"
            android:text="name"
            android:textColor="#DCF8EF"
            android:textSize="14dp"
            app:fontFamily="@font/source_sans_pro" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/view_homeworkimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
             />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        >

    <android.support.v7.widget.CardView
        android:id="@+id/imagedownload"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_download"
        app:cardBackgroundColor="#00FFA1"
        app:cardCornerRadius="5dp"
        >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/h_download"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>


    <Button
        android:layout_centerHorizontal="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_file_download_black_24dp"
        android:layout_toRightOf="@id/h_download"
        />

    </RelativeLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>


</LinearLayout>