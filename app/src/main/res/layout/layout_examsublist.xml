<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/exam_sched"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="12dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/but_doc"
        app:cardBackgroundColor="#42275a">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/but_doc">

            <TextView
                android:layout_width="10dp"
                android:layout_height="50dp"
                android:background="#0DC68D"/>

            <TextView
                android:id="@+id/serial"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:padding="5dp"
                android:text="01"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="@drawable/btn_circular"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="2dp"
                android:text="date1"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textStyle="normal" />

            <!--<TextView
                android:id="@+id/day"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="28dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="2dp"
                android:text="day1"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textStyle="normal" />-->

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_today_black_24dp"/>


            <TextView
                android:id="@+id/examinfo"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="3dp"
                android:text="sub1"
                android:textAlignment="center"
                android:textColor="#f0e68c"
                android:textSize="17dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>